{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "CommonJS",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["es6"],
        "baseUrl": "./src",
        "paths": {},
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.js"]
}
